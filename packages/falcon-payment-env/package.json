{
  "name": "@deity/falcon-payment-env",
  "version": "0.0.1",
  "license": "OSL-3.0",
  "repository": "https://github.com/deity-io/falcon/tree/master/packages/falcon-payment-env",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest --watch",
    "test:coverage": "jest --ci --coverage"
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "11.9.5",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5"
  }
}
